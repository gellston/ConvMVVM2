<UserControl x:Class="Test.WPF.View.AView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test.WPF.View"
             xmlns:convMVVM="https://github.com/gellston/ConvMVVM2"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             convMVVM:ViewModelLocator.AutoWireViewModel="True"
             convMVVM:ViewModelLocator.UseNamePatternMapper="True">

    <Grid Background="Orange">
        <TextBlock Text="{Binding Name}"></TextBlock>
    </Grid>
</UserControl>
